generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Severity {
  MAJOR
  HIGH
  MEDIUM
  LOW
}

enum Status {
  OPEN
  IN_PROGRESS
  CLOSED
  ON_HOLD
  AS_IT_IS
}

enum QCStatusBBT {
  PASSED
  FAILED
  PENDING
  REJECTED
}

model User {
  id           String    @id @default(uuid()) @db.Uuid
  name         String    @db.VarChar(120)
  email        String    @unique @db.VarChar(255)
  phone        String?   @db.VarChar(50)
  passwordHash String    @map("password_hash") @db.Text
  role         String    @default("admin") @db.VarChar(20)
  createdAt    DateTime  @default(now()) @map("createdAt")
  updatedAt    DateTime  @default(now()) @map("updatedAt")
  sessions     Session[]

  @@map("user")
}

model Session {
  id        String   @id @db.VarChar(128)
  userId    String   @db.Uuid @map("userId")
  expiresAt DateTime @map("expiresAt")
  createdAt DateTime @default(now()) @map("createdAt")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Defect {
  id              String        @id @default(uuid())
  testCaseId      String?       @db.VarChar(100)
  dateReported    DateTime      @db.Date
  module          String        @db.VarChar(255)
  summary         String?       @db.Text
  expectedResult  String        @db.Text
  actualResult    String        @db.Text
  severity        Severity
  priority        String        @db.VarChar(100)
  assignedTo      String?       @db.VarChar(100)
  status          Status
  dateFixed       DateTime?     @db.Date
  qcStatusBbt     QCStatusBBT
  createdAt       DateTime      @default(now())

  @@index([dateReported])
  @@index([module])
  @@index([severity])
  @@index([status])
}
