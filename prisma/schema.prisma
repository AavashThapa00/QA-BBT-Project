generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Severity {
  MAJOR
  HIGH
  MEDIUM
  LOW
}

enum Status {
  OPEN
  IN_PROGRESS
  CLOSED
  ON_HOLD
  AS_IT_IS
}

enum QCStatusBBT {
  PASSED
  FAILED
  PENDING
  REJECTED
}

model Defect {
  id              String        @id @default(uuid())
  testCaseId      String?       @db.VarChar(100)
  dateReported    DateTime      @db.Date
  module          String        @db.VarChar(255)
  summary         String?       @db.Text
  expectedResult  String        @db.Text
  actualResult    String        @db.Text
  severity        Severity
  priority        String        @db.VarChar(100)
  status          Status
  dateFixed       DateTime?     @db.Date
  qcStatusBbt     QCStatusBBT
  createdAt       DateTime      @default(now())

  @@index([dateReported])
  @@index([module])
  @@index([severity])
  @@index([status])
}
